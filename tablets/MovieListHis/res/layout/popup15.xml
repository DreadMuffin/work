<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_element15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupwp"
    tools:context=".Historie" >

 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:layout_above="@+id/txt"
        android:layout_alignLeft="@+id/txt"
        android:layout_marginBottom="88dp"
        android:gravity="center"
        android:text="Fugle - ”Passage”"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="125dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="143dp"
        android:text="Om efteråret besøges Syddanmark af hundrede tusindvis af stære på vej til varmere himmelstrøg. Ved sivene, hvor de overnatter, kan man opleve det forunderlige og vidunderlige naturfænomen at se dem flyve samlet, som i en luftens koreografi.
Alder: fra 12 år"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="505dp"
        android:layout_height="505dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/textView1"
        android:src="@drawable/a15" />

